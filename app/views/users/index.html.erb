<h1>Users</h1>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<%= button_to 'Create new user', new_user_path, method: :get %>
<% if current_user.doctor? %>
<h2>Patients</h2>
<table>
  <thead>
  <tr>
    <td>Id</td>
    <td>First Name</td>
    <td>Last Name</td>
    <td>Age</td>
    <td>Email</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @patients.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.age %></td>
      <td><%= user.email %></td>
      <td><%= link_to 'Details', user_path(user.id) %></td>
      <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
      <td><%= link_to 'Destroy', user_path(user.id), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
  <% else %>
<h2>Doctors</h2>
<table>
  <thead>
  <tr>
    <td>Id</td>
    <td>First Name</td>
    <td>Last Name</td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  </thead>
  <tbody>
  <% @doctors.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= link_to 'Details', user_path(user.id) %></td>
      <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
      <td><%= link_to 'Destroy', user_path(user.id), method: :delete %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
